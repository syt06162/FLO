<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/prac_firstPlotTitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 발매 음악"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="bold"
/>

    <ImageView
        android:id="@+id/prac_ad_afterThirdPlot_1_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/discovery_banner_aos"
        android:adjustViewBounds="true"

        android:layout_marginTop="30dp"


        />
    <ImageView
        android:id="@+id/home_ad_afterThirdPlot_2_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"

        android:src="@drawable/img_home_viewpager_exp2"

        android:layout_marginTop="40dp"
        />


</LinearLayout>
